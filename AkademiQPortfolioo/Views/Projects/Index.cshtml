@model List<AkademiQPortfolioo.Data.ProjectTable>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/Index.cshtml";
}



<div style="padding: 40px; font-family: 'Inter', sans-serif; background-color: #f4f1fb; min-height: 100vh;">

    <div style="max-width: 1200px; margin: 0 auto 40px auto; display: flex; justify-content: space-between; align-items: flex-end;">
        <div>
            <h1 style="font-size: 32px; font-weight: 800; color: #2e1065; margin: 0; letter-spacing: -1.5px;">
                Proje Portfolyom
            </h1>
            <p style="color: #6d5fa7; margin-top: 8px; font-size: 16px;">
                Geliştirdiğin tüm projeleri buradan yönetebilirsin.
            </p>
        </div>
        <a href="/Projects/ProjectCreate/"
           style="text-decoration: none;
           background: linear-gradient(135deg, #7c3aed, #a855f7);
           color: white; padding: 14px 28px; border-radius: 14px;
           font-weight: 600; font-size: 14px; transition: 0.3s;
           box-shadow: 0 6px 18px rgba(124,58,237,0.25);"
           onmouseover="this.style.background='linear-gradient(135deg, #8b5cf6, #c084fc)'"
           onmouseout="this.style.background='linear-gradient(135deg, #7c3aed, #a855f7)'">
            + Yeni Proje Ekle
        </a>
    </div>
  
    <div style="max-width: 1200px; margin: 0 auto; display: grid; grid-template-columns: repeat(auto-fill, minmax(300px, 1fr)); gap: 30px;">
        @foreach (var item in Model)
        {
            <div style="background: #ffffff; border-radius: 22px; overflow: hidden;
                        border: 1px solid #e9e3ff; transition: 0.4s ease;
                        position: relative; display: flex; flex-direction: column;"
                 onmouseover="this.style.transform='translateY(-8px)'; this.style.boxShadow='0 18px 35px rgba(124,58,237,0.15)';"
                 onmouseout="this.style.transform='translateY(0)'; this.style.boxShadow='none';">

                <div style="width: 100%; height: 200px; overflow: hidden; background: #f3efff;">
                    <img src="@item.Image" alt="@item.Title"
                         style="width: 100%; height: 100%; object-fit: cover; transition: 0.5s;"
                         onerror="this.src='https://placehold.co/600x400?text=Görsel+Yok';">
                </div>

                <div style="padding: 20px; flex-grow: 1;">
                    <span style="font-size: 11px; font-weight: 800; color: #7c3aed;
                                 text-transform: uppercase; letter-spacing: 1px;">
                        @item.ProjectName
                    </span>

                    <h3 style="font-size: 20px; font-weight: 700; color: #2e1065;
                               margin: 8px 0 15px 0; line-height: 1.2;">
                        @item.Title
                    </h3>

                    <div style="display: flex; gap: 10px; margin-top: auto;">
                        <a href="/Projects/ProjectUpdate/@item.ProjectId"
                           style="flex: 1; text-align: center; text-decoration: none; padding: 10px;
                           background: #f3efff; color: #4c1d95; border-radius: 10px;
                           font-size: 13px; font-weight: 700; transition: 0.2s;"
                           onmouseover="this.style.background='#e9e3ff'"
                           onmouseout="this.style.background='#f3efff'">
                            Düzenle
                        </a>

                        <a href="/Projects/DeleteProject/@item.ProjectId"
                           onclick="return confirm('Bu projeyi silmek istediğine emin misin?')"
                           style="flex: 1; text-align: center; text-decoration: none; padding: 10px;
                           background: #fde8ff; color: #a21caf; border-radius: 10px;
                           font-size: 13px; font-weight: 700; transition: 0.2s;"
                           onmouseover="this.style.background='#fbcfe8'"
                           onmouseout="this.style.background='#fde8ff'">
                            Sil
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
