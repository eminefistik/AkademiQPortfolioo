@model List<AkademiQPortfolioo.Data.TestimonialTable>
@{
    ViewData["Title"] = "TestimonialList";
    Layout = "~/Views/Admin/Index.cshtml";
}





<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Referanslar</title>

    <!-- Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&display=swap" rel="stylesheet" />

    <!-- Tailwind -->
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: "#7f13ec",
                        lilac: "#F5EFFF",
                        surface: "#ffffff"
                    },
                    fontFamily: {
                        display: ["Inter", "sans-serif"]
                    },
                    boxShadow: {
                        glow: "0 20px 50px -15px rgba(127,19,236,.45)"
                    }
                }
            }
        }
    </script>
</head>

<body class="font-display antialiased">

    <!-- WRAPPER -->
    <div class="min-h-screen w-full bg-lilac px-6 pb-32">

        <!-- HEADER -->
        <header class="sticky top-0 z-30 -mx-6 px-6 py-6 bg-lilac/80 backdrop-blur-md flex items-center justify-between">
            <div>
                <h1 class="text-2xl font-extrabold text-slate-900">Referanslar</h1>
                <p class="text-sm text-slate-500">@Model.Count adet kayıt</p>
            </div>
        </header>

        <!-- SEARCH -->
        <div class="mt-6 max-w-xl">
            <div class="flex items-center h-12 bg-white rounded-2xl px-4 shadow">
                <span class="material-symbols-outlined text-primary mr-2">search</span>
                <input type="text"
                       placeholder="Referans ara..."
                       class="w-full bg-transparent border-none focus:ring-0 text-slate-700 placeholder:text-slate-400" />
            </div>
        </div>

        <!-- GRID -->
        <div class="mt-10 grid grid-cols-1 md:grid-cols-2 gap-6">

            @foreach (var item in Model)
            {
                <div class="group relative bg-white/80 backdrop-blur rounded-3xl p-6 shadow-glow border border-primary/10 hover:-translate-y-1 transition">

                    <!-- glow -->
                    <div class="absolute inset-0 rounded-3xl bg-gradient-to-br from-primary/20 to-transparent opacity-0 group-hover:opacity-100 transition pointer-events-none"></div>

                    <div class="relative flex flex-col items-center text-center">

                        <!-- IMAGE -->
                        <div class="relative -mt-14">
                            <div class="h-28 w-28 rounded-full bg-gradient-to-br from-primary to-purple-400 p-[3px] shadow-lg">
                                <img src="@item.ImageUrl"
                                     class="h-full w-full object-cover rounded-full bg-white" />
                            </div>
                        </div>

                        <!-- CONTENT -->
                        <h3 class="mt-4 text-lg font-bold text-slate-900">
                            @item.NameSurname
                        </h3>

                        <p class="text-sm font-semibold text-primary">
                            @item.Title
                        </p>

                        <p class="text-sm text-slate-600 mt-3 leading-relaxed line-clamp-3">
                            “@item.Description”
                        </p>

                        <!-- ACTIONS -->
                        <div class="flex gap-3 mt-5 opacity-0 group-hover:opacity-100 transition">

                            <a href="/Testimonial/DeleteTestimonial/@item.TestimonialId"
                               class="flex h-10 px-4 items-center gap-2 rounded-full bg-red-100 text-red-500 hover:bg-red-200 transition">
                                <span class="material-symbols-outlined text-[20px]">delete</span>
                                Sil
                            </a>

                        </div>

                    </div>
                </div>
            }

        </div>

        <!-- FLOAT BUTTON -->
        <a href="/Testimonial/CreateTestimonial"
           class="fixed bottom-6 right-6 flex items-center gap-3 h-14 px-6 bg-primary text-white rounded-full shadow-xl hover:scale-105 transition">
            <span class="material-symbols-outlined text-[26px]">add</span>
            <span class="font-semibold">Yeni Referans</span>
        </a>

    </div>

</body>
</html>
  





