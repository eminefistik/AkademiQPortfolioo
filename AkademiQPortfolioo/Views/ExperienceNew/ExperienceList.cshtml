@model List<AkademiQPortfolioo.Data.ExperienceTable>

@{
    ViewData["Title"] = "ExperienceList";
    Layout = "~/Views/Admin/Index.cshtml";
}
          


<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Deneyimler</title>

    <!-- Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons+Round" rel="stylesheet" />

    <!-- Tailwind -->
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: "#7f13ec",
                        lilac: "#F5EFFF"
                    },
                    fontFamily: {
                        display: ["Inter", "sans-serif"]
                    },
                    boxShadow: {
                        card: "0 10px 30px -15px rgba(127,19,236,.35)"
                    }
                }
            }
        }
    </script>
</head>

<body class="font-display antialiased">

    <div class="min-h-screen w-full bg-lilac px-4 pb-32">

        <!-- HEADER -->
        <header class="sticky top-0 z-20 -mx-4 px-4 py-5 bg-lilac/90 backdrop-blur-md flex items-center justify-between">
            <div>
                <h1 class="text-2xl font-extrabold text-slate-900">Deneyimler</h1>
                <p class="text-sm text-slate-500">Kariyer yolculuğunu buradan düzenle</p>
            </div>

            <a href="/ExperienceNew/CreateExperience"
               class="flex items-center gap-2 h-11 px-5 bg-primary text-white rounded-full shadow-lg hover:scale-105 transition">
                <span class="material-icons-round">Ekle</span>
                Yeni
            </a>
        </header>

        <!-- LIST -->
        <div class="mt-8 space-y-5">

            @foreach (var item in Model)
            {
                <div class="group relative bg-white rounded-3xl p-6 shadow-card transition hover:-translate-y-1">

                    <!-- Glow -->
                    <div class="absolute inset-0 rounded-3xl bg-gradient-to-r from-primary/20 to-transparent opacity-0 group-hover:opacity-100 transition pointer-events-none"></div>

                    <div class="relative flex flex-col lg:flex-row gap-6 items-start lg:items-center">

                        <!-- LEFT -->
                        <div class="flex items-center gap-4 lg:w-1/3">
                            <div class="w-16 h-16 rounded-2xl bg-gradient-to-br from-primary to-purple-400 text-white flex items-center justify-center shadow">
                                <span class="material-icons-round text-3xl">@item.Icon</span>
                            </div>

                            <div>
                                <h3 class="text-lg font-bold text-slate-900">
                                    @item.Title
                                </h3>
                                <p class="text-sm font-medium text-primary">
                                    @item.DescriptionTitle
                                </p>
                            </div>
                        </div>

                        <!-- CENTER -->
                        <div class="lg:w-1/3 text-sm text-slate-600 leading-relaxed">
                            @item.Description
                        </div>

                        <!-- RIGHT -->
                        <div class="lg:w-1/3 flex flex-col lg:items-end gap-3">

                            <span class="text-xs font-bold bg-primary/10 text-primary py-1.5 px-4 rounded-full">
                                @item.Year
                            </span>

                            <div class="flex gap-3 opacity-0 group-hover:opacity-100 transition">

                                <a href="/ExperienceNew/UpdateExperience/@item.ExperienceId"
                                   class="flex items-center gap-1 px-4 py-2 rounded-full bg-primary text-white shadow hover:scale-105 transition text-sm">
                                    <span class="material-icons-round text-[18px]">edit</span>
                                    Düzenle
                                </a>

                                <a href="/ExperienceNew/DeleteExperience/@item.ExperienceId"
                                   class="flex items-center gap-1 px-4 py-2 rounded-full bg-red-100 text-red-500 hover:bg-red-200 transition text-sm">
                                    <span class="material-icons-round text-[18px]">delete</span>
                                    Sil
                                </a>

                            </div>
                        </div>

                    </div>
                </div>
            }

        </div>

    </div>

</body>
</html>