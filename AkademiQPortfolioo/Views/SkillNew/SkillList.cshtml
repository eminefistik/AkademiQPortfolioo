@model List<AkademiQPortfolioo.Data.SkilTable>
@{
    ViewData["Title"] = "SkillList";
    Layout = "~/Views/Admin/Index.cshtml";
}


<script src="https://cdn.tailwindcss.com"></script>

<div class="p-6 bg-[#f4f1fb] min-h-screen">
    <div class="max-w-6xl mx-auto">

        <div class="flex flex-col md:flex-row md:items-center justify-between mb-8 gap-4">
            <div>
                <h1 class="text-3xl font-extrabold text-[#2e1065] tracking-tight">
                    Yetenek Yönetimi
                </h1>
                <p class="text-[#6d5fa7] mt-1">
                    Sistemdeki tüm yetenekleri buradan düzenleyebilir veya silebilirsiniz.
                </p>
            </div>
            <a href="/SkillNew/CreateSkill/"
               class="inline-flex items-center px-5 py-2.5
               bg-gradient-to-r from-purple-600 to-fuchsia-600
               hover:from-purple-700 hover:to-fuchsia-700
               text-white text-sm font-medium rounded-lg
               transition-all duration-200 shadow-lg shadow-purple-300">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                          d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                </svg>
                Yeni Yetenek Ekle
            </a>
        </div>

        <div class="bg-white rounded-2xl shadow-sm border border-purple-100 overflow-hidden">
            <div class="overflow-x-auto">
                <table class="w-full text-left border-collapse">
                    <thead>
                        <tr class="bg-purple-50/50 border-b border-purple-100">
                            <th class="px-6 py-4 text-xs font-semibold text-purple-500 uppercase tracking-wider">
                                #ID
                            </th>
                            <th class="px-6 py-4 text-xs font-semibold text-purple-500 uppercase tracking-wider">
                                Yetenek Başlığı
                            </th>
                            <th class="px-6 py-4 text-xs font-semibold text-purple-500 uppercase tracking-wider">
                                Seviye
                            </th>
                            <th class="px-6 py-4 text-xs font-semibold text-purple-500 uppercase tracking-wider text-right">
                                İşlemler
                            </th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-purple-50">
                        @foreach (var item in Model)
                        {
                            <tr class="hover:bg-purple-50/40 transition-colors duration-150 group">
                                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-purple-300 group-hover:text-purple-600">
                                    #@item.SkilId
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <span class="text-sm font-semibold text-[#2e1065]">
                                        @item.Title
                                    </span>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="flex items-center w-full max-w-xs">
                                        <div class="flex-1 bg-purple-100 rounded-full h-2 mr-3">
                                            <div class="bg-gradient-to-r from-purple-600 to-fuchsia-600
                                                        h-2 rounded-full
                                                        shadow-[0_0_10px_rgba(168,85,247,0.45)]"
                                                 style="width: @item.Levels%">
                                            </div>
                                        </div>
                                        <span class="text-xs font-bold text-purple-700 bg-purple-100 px-2 py-1 rounded">
                                            %@item.Levels
                                        </span>
                                    </div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                    <div class="flex justify-end space-x-2">
                                        <a href="/SkillNew/SkillUpdate/@item.SkilId"
                                           class="inline-flex items-center px-3 py-1.5
                                           bg-purple-50 text-purple-700
                                           hover:bg-purple-100 rounded-md transition-colors">
                                            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                      d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                                            </svg>
                                            Düzenle
                                        </a>
                                        <a href="/SkillNew/DeleteSkill/@item.SkilId"
                                           onclick="return confirm('Silmek istediğine emin misin?')"
                                           class="inline-flex items-center px-3 py-1.5
                                           bg-pink-50 text-pink-600
                                           hover:bg-pink-100 rounded-md transition-colors">
                                            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                      d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                                            </svg>
                                            Sil
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

    </div>
</div>
