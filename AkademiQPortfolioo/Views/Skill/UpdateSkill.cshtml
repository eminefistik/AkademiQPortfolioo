@model AkademiQPortfolioo.Data.SkilTable
@{
    ViewData["Title"] = "UpdateSkill";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h1>Burası Güncelleme Sayfası</h1>
<form method="post">
    <label>ID</label>
    <input type="text" class="form-control" name="SkilId" value="@Model.SkilId" readonly /> @* readonly ilgili satırı dokunulamaz yapıyor  *@
    <label>Title</label>
    <input type="text" class="form-control" name="Title" value="@Model.Title" />
    <label>Level</label>
    <input type="text" class="form-control" name="Levels" value="@Model.Levels" />
    <label>Test</label>
    <input type="text" class="form-control" name="Test" value="@Model.Test" />
    <br />
    <button type="submit" class="btn btn-success">Güncelle</button>
</form>