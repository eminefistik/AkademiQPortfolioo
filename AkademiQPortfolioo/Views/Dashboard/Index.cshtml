@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/Index.cshtml";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Dashboard</title>

    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" rel="stylesheet" />
    <script src="https://cdn.tailwindcss.com"></script>

    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        pageBg: "#EEE8FA",
                        cardBg: "#FFFFFF",
                        primary: "#8B2FF0",
                        iconBg: "#F3EEFF",
                        title: "#2A1038",
                        text: "#5A4A70",
                    },
                    fontFamily: {
                        sans: ["Inter", "sans-serif"],
                    },
                },
            },
        }
    </script>

    <style>
        body {
            background: #EEE8FA !important;
            background-color: #EEE8FA !important;
        }

        html {
            background: #EEE8FA !important;
            background-color: #EEE8FA !important;
        }

        /* ANA CONTAINER - arka plan aynı */
        .main-container {
            background: linear-gradient(145deg, #EEE8FA 0%, #E8E0F5 50%, #EDE5FF 100%) !important;
            min-height: 100vh;
            position: relative;
            overflow: hidden;
        }

            .main-container::before {
                content: "";
                position: fixed;
                top: -120px;
                right: -120px;
                width: 420px;
                height: 420px;
                background: radial-gradient(circle, rgba(139,47,240,0.12) 0%, transparent 70%);
                border-radius: 50%;
                pointer-events: none;
                z-index: 0;
            }

            .main-container::after {
                content: "";
                position: fixed;
                bottom: -100px;
                left: -100px;
                width: 360px;
                height: 360px;
                background: radial-gradient(circle, rgba(176,120,255,0.10) 0%, transparent 70%);
                border-radius: 50%;
                pointer-events: none;
                z-index: 0;
            }

        .max-w-\[1400px\] {
            position: relative;
            z-index: 1;
        }

        /* CARD WRAPPER */
        .card-wrapper {
            position: relative;
            animation: cardIn 0.55s cubic-bezier(0.22, 1, 0.36, 1) both;
        }

            .card-wrapper:nth-child(1) {
                animation-delay: 0.04s;
            }

            .card-wrapper:nth-child(2) {
                animation-delay: 0.09s;
            }

            .card-wrapper:nth-child(3) {
                animation-delay: 0.14s;
            }

            .card-wrapper:nth-child(4) {
                animation-delay: 0.19s;
            }

            .card-wrapper:nth-child(5) {
                animation-delay: 0.24s;
            }

            .card-wrapper:nth-child(6) {
                animation-delay: 0.29s;
            }

            .card-wrapper:nth-child(7) {
                animation-delay: 0.34s;
            }

            .card-wrapper:nth-child(8) {
                animation-delay: 0.39s;
            }

            .card-wrapper:nth-child(9) {
                animation-delay: 0.44s;
            }

        @@keyframes cardIn {
            from {
                opacity: 0;
                transform: translateY(24px) scale(0.97);
            }

            to {
                opacity: 1;
                transform: translateY(0) scale(1);
            }
        }

        /* Her kart için farklı accent renk - sol kenar çizgisi */
        .card-wrapper:nth-child(1) .neon-card {
            --accent: #8B2FF0;
            --accent-soft: rgba(139,47,240,0.10);
        }

        .card-wrapper:nth-child(2) .neon-card {
            --accent: #0EA5E9;
            --accent-soft: rgba(14,165,233,0.10);
        }

        .card-wrapper:nth-child(3) .neon-card {
            --accent: #10B981;
            --accent-soft: rgba(16,185,129,0.10);
        }

        .card-wrapper:nth-child(4) .neon-card {
            --accent: #F59E0B;
            --accent-soft: rgba(245,158,11,0.10);
        }

        .card-wrapper:nth-child(5) .neon-card {
            --accent: #EF4444;
            --accent-soft: rgba(239,68,68,0.10);
        }

        .card-wrapper:nth-child(6) .neon-card {
            --accent: #EC4899;
            --accent-soft: rgba(236,72,153,0.10);
        }

        .card-wrapper:nth-child(7) .neon-card {
            --accent: #6366F1;
            --accent-soft: rgba(99,102,241,0.10);
        }

        .card-wrapper:nth-child(8) .neon-card {
            --accent: #14B8A6;
            --accent-soft: rgba(20,184,166,0.10);
        }

        .card-wrapper:nth-child(9) .neon-card {
            --accent: #F97316;
            --accent-soft: rgba(249,115,22,0.10);
        }

        /* KART */
        .neon-card {
            position: relative;
            z-index: 1;
            background: #FFFFFF;
            border-radius: 1.25rem;
            padding: 1.6rem 1.6rem 1.6rem 2rem;
            border: 1.5px solid rgba(139,47,240,0.08);
            border-left: 4px solid var(--accent);
            box-shadow: 0 2px 12px rgba(0,0,0,0.05), 0 1px 3px rgba(0,0,0,0.03);
            transition: all 0.28s cubic-bezier(0.34, 1.4, 0.64, 1);
            overflow: hidden;
        }

            /* Sağ alt köşe dekor dairesi */
            .neon-card::after {
                content: "";
                position: absolute;
                bottom: -28px;
                right: -28px;
                width: 90px;
                height: 90px;
                border-radius: 50%;
                background: var(--accent-soft);
                transition: all 0.4s ease;
            }

            .neon-card:hover {
                transform: translateY(-5px) translateX(2px);
                border-color: rgba(139,47,240,0.06);
                border-left-color: var(--accent);
                box-shadow: 0 12px 32px rgba(0,0,0,0.09), 0 4px 10px rgba(0,0,0,0.05), 4px 0 0 0 var(--accent);
            }

                .neon-card:hover::after {
                    bottom: -18px;
                    right: -18px;
                    width: 110px;
                    height: 110px;
                }

        /* İKON */
        .icon-container {
            width: 2.8rem;
            height: 2.8rem;
            border-radius: 0.75rem;
            background: var(--accent-soft);
            color: var(--accent);
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 1.1rem;
            transition: all 0.3s cubic-bezier(0.34, 1.4, 0.64, 1);
            border: 1.5px solid color-mix(in srgb, var(--accent) 20%, transparent);
        }

        .neon-card:hover .icon-container {
            background: var(--accent);
            color: #fff;
            transform: scale(1.1) rotate(-4deg);
            border-color: transparent;
            box-shadow: 0 4px 14px color-mix(in srgb, var(--accent) 40%, transparent);
        }

        .material-symbols-outlined {
            font-size: 22px;
        }

        /* HEADER BADGE */
        .header-badge {
            display: inline-flex;
            align-items: center;
            gap: 7px;
            background: rgba(139,47,240,0.08);
            border: 1px solid rgba(139,47,240,0.14);
            border-radius: 999px;
            padding: 5px 16px;
            font-size: 0.7rem;
            font-weight: 700;
            color: #8B2FF0;
            letter-spacing: 0.08em;
            text-transform: uppercase;
            margin-bottom: 0.85rem;
        }

            .header-badge::before {
                content: "";
                width: 6px;
                height: 6px;
                border-radius: 50%;
                background: #8B2FF0;
                animation: pulseDot 2s ease-in-out infinite;
            }

        @@keyframes pulseDot {
            0%, 100% {
                opacity: 1;
                transform: scale(1);
            }

            50% {
                opacity: 0.4;
                transform: scale(0.65);
            }
        }

        /* Başlık altı dekoratif çizgi */
        .section-divider {
            display: flex;
            align-items: center;
            gap: 10px;
            margin-bottom: 2.5rem;
        }

            .section-divider::before {
                content: "";
                width: 32px;
                height: 3px;
                border-radius: 999px;
                background: linear-gradient(90deg, #8B2FF0, #C084FC);
            }

            .section-divider::after {
                content: "";
                flex: 1;
                height: 1px;
                background: linear-gradient(90deg, rgba(139,47,240,0.15), transparent);
            }

            .section-divider span {
                font-size: 0.72rem;
                font-weight: 600;
                color: rgba(90,74,112,0.5);
                letter-spacing: 0.06em;
                text-transform: uppercase;
                white-space: nowrap;
            }
    </style>
</head>

<body class="font-sans text-title">

    <div class="main-container">
        <div class="max-w-[1400px] mx-auto px-6 py-10">

            <!-- HEADER -->
            <div class="mb-8">
                <div class="header-badge">Kontrol Paneli</div>
                <h1 class="text-3xl font-bold mb-2 text-title">
                    Kontrol Paneline Genel Bakış
                </h1>
                <p class="text-sm text-text">
                    Tekrar hoş geldiniz! İşte sistem istatistiklerinize hızlı bir bakış.
                </p>
            </div>

            <!-- DIVIDER -->
            <div class="section-divider">
                <span>İstatistikler</span>
            </div>

            <!-- GRID -->
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">

                <!-- CARD 1 -->
                <div class="card-wrapper">
                    <div class="neon-card">
                        <div class="icon-container">
                            <span class="material-symbols-outlined">group</span>
                        </div>
                        <h2 class="text-2xl font-bold text-title mb-1">@ViewBag.LastProject</h2>
                        <p class="text-sm text-text">Son eklenen proje</p>
                    </div>
                </div>

                <!-- CARD 2 -->
                <div class="card-wrapper">
                    <div class="neon-card">
                        <div class="icon-container">
                            <span class="material-symbols-outlined">payments</span>
                        </div>
                        <h2 class="text-2xl font-bold text-title mb-1">Toplam Servis Sayısı</h2>
                        <p class="text-sm text-text">@ViewBag.TotalServicesCount</p>
                    </div>
                </div>

                <!-- CARD 3 -->
                <div class="card-wrapper">
                    <div class="neon-card">
                        <div class="icon-container">
                            <span class="material-symbols-outlined">shopping_cart</span>
                        </div>
                        <h2 class="text-2xl font-bold text-title mb-1">@ViewBag.FirstCategory</h2>
                        <p class="text-sm text-text">İlk Eklenen Kategori</p>
                    </div>
                </div>

                <!-- CARD 4 -->
                <div class="card-wrapper">
                    <div class="neon-card">
                        <div class="icon-container">
                            <span class="material-symbols-outlined">pulse_alert</span>
                        </div>
                        <h2 class="text-2xl font-bold text-title mb-1">@ViewBag.FirstProject</h2>
                        <p class="text-sm text-text">İlk Eklenen Proje</p>
                    </div>
                </div>

                <!-- CARD 5 -->
                <div class="card-wrapper">
                    <div class="neon-card">
                        <div class="icon-container">
                            <span class="material-symbols-outlined">monitor</span>
                        </div>
                        <h2 class="text-2xl font-bold text-title mb-1">Toplam Referans Sayısı</h2>
                        <p class="text-sm text-text">@ViewBag.TotalTestimonialCount</p>
                    </div>
                </div>

                <!-- CARD 6 -->
                <div class="card-wrapper">
                    <div class="neon-card">
                        <div class="icon-container">
                            <span class="material-symbols-outlined">support_agent</span>
                        </div>
                        <h2 class="text-2xl font-bold text-title mb-1">Gelen Mesaj Sayısı</h2>
                        <p class="text-sm text-text">@ViewBag.totalmessagge</p>
                    </div>
                </div>

                <!-- CARD 7 -->
                <div class="card-wrapper">
                    <div class="neon-card">
                        <div class="icon-container">
                            <span class="material-symbols-outlined">cloud</span>
                        </div>
                        <h2 class="text-2xl font-bold text-title mb-1">İlk Deneyim</h2>
                        <p class="text-sm text-text">@ViewBag.Lastexperience</p>
                    </div>
                </div>

                <!-- CARD 8 -->
                <div class="card-wrapper">
                    <div class="neon-card">
                        <div class="icon-container">
                            <span class="material-symbols-outlined">rocket_launch</span>
                        </div>
                        <h2 class="text-2xl font-bold text-title mb-1">İlk Referans</h2>
                        <p class="text-sm text-text">@ViewBag.FirstTestimonialComment</p>
                    </div>
                </div>

                <!-- CARD 9 -->
                <div class="card-wrapper">
                    <div class="neon-card">
                        <div class="icon-container">
                            <span class="material-symbols-outlined">rate_review</span>
                        </div>
                        <h2 class="text-2xl font-bold text-title mb-1">Yetenek Sayısı</h2>
                        <p class="text-sm text-text">@ViewBag.Totalskill</p>
                    </div>
                </div>

            </div>
        </div>
    </div>

</body>
</html>
