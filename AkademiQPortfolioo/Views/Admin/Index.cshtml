
@{
    Layout = null;
}

<!DOCTYPE html>
<html class="dark" lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Portfolio Admin Dashboard</title>

    <link href="https://fonts.googleapis.com/css2?family=Spline+Sans:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&display=swap" rel="stylesheet" />

    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>

    <script id="tailwind-config">
        tailwind.config = {
            darkMode: "class",
            theme: {
                extend: {
                    colors: {
                        primary: "#d946ef",               /* pembe-mor vurgu */
                        "background-light": "#faf7ff",
                        "background-dark": "#160b24",     /* daha derin mor */
                        "surface-dark": "#201033",        /* geçişli his veren yüzey */
                        "surface-light": "#ffffff",
                    },
                    fontFamily: {
                        display: ["Spline Sans", "sans-serif"]
                    },
                    borderRadius: {
                        DEFAULT: "1rem",
                        lg: "1.5rem",
                        xl: "2rem",
                        full: "9999px"
                    },
                },
            },
        }
    </script>

    <style>
        .material-symbols-outlined {
            font-variation-settings: 'FILL' 0, 'wght' 400, 'GRAD' 0, 'opsz' 24;
        }

        .icon-fill {
            font-variation-settings: 'FILL' 1, 'wght' 400, 'GRAD' 0, 'opsz' 24;
        }
    </style>
</head>

<body class="bg-background-light dark:bg-background-dark font-display text-slate-900 dark:text-white overflow-x-hidden">
    <div class="flex h-screen w-full overflow-hidden">

        <!-- Sidebar -->
        <aside class="hidden w-72 flex-col border-r border-fuchsia-900/40 bg-white dark:bg-surface-dark lg:flex">
            <div class="flex h-full flex-col justify-between p-6">

                <div class="flex flex-col gap-8">

                    <!-- User Profile Snippet -->
                    <div class="flex items-center gap-4 px-2">
                        <div class="relative h-12 w-12 overflow-hidden rounded-full border-2 border-primary/40">
                            <img src="~/emine.jpg"
                                 alt="Profile picture of a professional man smiling"
                                 class="h-full w-full object-cover" />
                            <div class="absolute bottom-0 right-0 h-3 w-3 rounded-full bg-primary border-2 border-surface-dark"></div>
                        </div>

                        <div class="flex flex-col">
                            <h1 class="text-base font-bold leading-tight">Emine Fıstık</h1>
                            <p class="text-xs font-medium text-fuchsia-300">
                                Portföy Yönetimi
                            </p>
                        </div>
                    </div>

                    <!-- Navigation Links -->
                    @await Component.InvokeAsync("_AdminLayoutSidebarComponentPartial")

                </div>

                <!-- Bottom Links -->
                <div class="flex flex-col gap-2">
                    <a href="#"
                       class="group flex items-center gap-3 rounded-full px-4 py-3 text-fuchsia-300 transition-colors hover:bg-fuchsia-500/15">
                        <span class="material-symbols-outlined group-hover:text-primary transition-colors">
                            settings
                        </span>
                        <span class="text-sm font-medium group-hover:text-white">
                            Settings
                        </span>
                    </a>

                    <a href="#"
                       class="group flex items-center gap-3 rounded-full px-4 py-3 text-fuchsia-300 transition-colors hover:bg-rose-500/15">
                        <span class="material-symbols-outlined group-hover:text-rose-400 transition-colors">
                            logout
                        </span>
                        <span class="text-sm font-medium group-hover:text-rose-400">
                            Logout
                        </span>
                    </a>
                </div>

            </div>
        </aside>

        <!-- Main Content Area -->
        <main class="flex h-full flex-1 flex-col overflow-y-auto">

            <!-- Mobile Header -->
            <header class="sticky top-0 z-20 flex h-16 items-center justify-between border-b border-fuchsia-900/40 bg-background-dark/80 px-6 backdrop-blur-md lg:hidden">
                <div class="flex items-center gap-3">
                    <button class="flex items-center text-fuchsia-300">
                        <span class="material-symbols-outlined">menu</span>
                    </button>
                    <span class="text-lg font-bold">Portfolio Admin</span>
                </div>

                <div class="h-8 w-8 overflow-hidden rounded-full border border-primary/40">
                    <img src="https://lh3.googleusercontent.com/aida-public/AB6AXuDj9zPMPnSROMDDXX7v44JPVPeEgLkY1RqupsHlskBqD-NQaHs3xAIqQnf2UzAoMPd8VC0Y20y9p3ez-xqlIXJBhTAUTRQ1c3zkLfSSI5K96RVB0tev9BOWl8tHTHpM32df2HXa9NDTvNs_Jv2Llc2bjvWYKKg7F5DnJ50_Q8DfuTBrtrts7L7C5EVUdQEigE8Od4QfnL5uZMM86zqXnPERpxEpc0MTZEImojeTu7OIdkl8e_SHv-bxeU6kn2RRH6lLVJde4MVw1rAn"
                         alt="User profile thumbnail"
                         class="h-full w-full object-cover" />
                </div>
            </header>

            <!-- Dashboard Content -->
            @RenderBody()

        </main>

    </div>
</body>
</html>
