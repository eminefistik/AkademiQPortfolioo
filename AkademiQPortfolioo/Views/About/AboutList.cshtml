@model List<AkademiQPortfolioo.Data.AboutTable>

@{
    ViewData["Title"] = "AboutList";
    Layout = "~/Views/Admin/Index.cshtml";
}


<style>
    body {
        background: linear-gradient(135deg, #F6F0FF, #ECE4FF) !important;
    }
</style>

<div class="min-h-screen w-full flex items-center justify-center px-6 py-16">

    <div class="w-full max-w-3xl">

        <!-- HEADER -->
        <div class="text-center mb-12">
            <h1 class="text-4xl font-bold text-purple-700 tracking-tight">Hakkımda</h1>
            <p class="mt-3 text-slate-500 text-lg">
                Kişisel profil bilgilerinizi yönetin ve sergileyin.
            </p>
            <a href="/About/CreateAbout">
            <button class="mt-8 px-10 py-4 rounded-full bg-gradient-to-r from-purple-600 to-purple-400 text-white font-semibold shadow-xl hover:scale-105 transition">
                + Yeni Profil Ekle
                </button>
            </a>
        </div>

        <!-- CARD -->
        <div class="relative bg-white/80 backdrop-blur-xl rounded-[2.5rem] p-10 shadow-2xl border border-purple-100">

            <div class="flex flex-col md:flex-row gap-10 items-center">
             
                <!-- IMAGE -->
                <div class="shrink-0">
                    <img src="~/eminefıstık/emine.jpg"
                         class="w-40 h-40 rounded-3xl object-cover ring-8 ring-purple-100 shadow-lg" />
                </div>

                <!-- CONTENT -->
                <div class="flex-1">

                    <span class="inline-block mb-4 px-4 py-1.5 rounded-full bg-purple-100 text-purple-700 font-semibold text-sm">
                        Yazılım Geliştirici
                    </span>

                    <h2 class="text-3xl font-bold text-slate-800">
                       Emine Fıstık
                    </h2>

                    <p class="mt-4 text-slate-600 leading-relaxed text-base">
                        Merhaba, ben Emine Fıstık. Nişantaşı Üniversitesi Bilgisayar Programcılığı 2. sınıf öğrencisiyim. Yazılım geliştirme alanında kendimi sürekli geliştirmeye odaklanıyorum ve özellikle web teknolojileri üzerine çalışıyorum.
                    </p>

                    <!-- INFO GRID -->
                    <div class="mt-8 grid grid-cols-1 sm:grid-cols-2 gap-6">

                        <div class="bg-purple-50 rounded-2xl p-5">
                            <span class="text-xs uppercase tracking-widest text-slate-400">Telefon Numarası</span>
                            <p class="mt-1 text-slate-700 font-semibold">+90 0505 050 0505</p>
                        </div>

                        <div class="bg-purple-50 rounded-2xl p-5">
                            <span class="text-xs uppercase tracking-widest text-slate-400">E-posta</span>
                            <p class="mt-1 text-slate-700 font-semibold truncate">emine@gmail.com</p>
                        </div>

                        <div class="bg-purple-50 rounded-2xl p-5 sm:col-span-2">
                            <span class="text-xs uppercase tracking-widest text-slate-400">Konum</span>
                            <p class="mt-1 text-slate-700 font-semibold">İstanbul </p>
                        </div>

                    </div>
                   
                        <div class="mt-10 flex gap-5">

                        <a href="/About/AboutUpdate/"
                               class="flex-1 py-4 rounded-2xl bg-purple-700 text-white font-semibold shadow-lg hover:bg-purple-800 hover:scale-[1.02] transition text-center">
                                Profil Düzenle
                            </a>

                            <a href="/About/DeleteAbout/"
                               class="w-28 py-4 rounded-2xl bg-red-100 text-red-600 font-semibold hover:bg-red-200 transition text-center">
                                Sil
                            </a>

                        </div>
                   

                </div>
                
            </div>

        </div>

    </div>

</div>