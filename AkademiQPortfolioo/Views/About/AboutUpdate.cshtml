@model AkademiQPortfolioo.Data.AboutTable
@{
    ViewData["Title"] = "AboutUpdate";
    Layout = "~/Views/Admin/Index.cshtml";
}


<style>
    body {
        background: linear-gradient(135deg, #F6F0FF, #ECE4FF) !important;
    }
</style>

<div class="min-h-screen w-full flex items-center justify-center px-6 py-16">

    <div class="w-full max-w-3xl">

        <!-- HEADER -->
        <div class="text-center mb-12">
            <h1 class="text-4xl font-bold text-purple-700 tracking-tight">Update About</h1>
            <p class="mt-3 text-slate-500 text-lg">
                Update your personal information and profile details.
            </p>
        </div>

        <!-- CARD -->
        <form asp-action="Update" method="post"
              class="relative bg-white/80 backdrop-blur-xl rounded-[2.5rem] p-10 shadow-2xl border border-purple-100">

            <!-- ID -->
            <input type="hidden" asp-for="AboutId" />

            <div class="grid grid-cols-1 md:grid-cols-2 gap-8">

                <!-- NAME -->
                <div>
                    <label class="block text-sm font-semibold text-slate-600 mb-2">Full Name</label>
                    <input asp-for="Awards"
                           class="w-full rounded-xl border border-purple-200 px-4 py-3 focus:ring-2 focus:ring-purple-400 outline-none" />
                </div>

                <!-- TITLE -->
                <div>
                    <label class="block text-sm font-semibold text-slate-600 mb-2">Title</label>
                    <input asp-for="Title"
                           class="w-full rounded-xl border border-purple-200 px-4 py-3 focus:ring-2 focus:ring-purple-400 outline-none" />
                </div>

                <!-- IMAGE -->
                <div class="md:col-span-2">
                    <label class="block text-sm font-semibold text-slate-600 mb-2">Image Url</label>
                    <input asp-for="Description"
                           class="w-full rounded-xl border border-purple-200 px-4 py-3 focus:ring-2 focus:ring-purple-400 outline-none" />
                </div>

                <!-- DESCRIPTION -->
                <div class="md:col-span-2">
                    <label class="block text-sm font-semibold text-slate-600 mb-2">Description</label>
                    <textarea asp-for="Description"
                              rows="5"
                              class="w-full rounded-xl border border-purple-200 px-4 py-3 focus:ring-2 focus:ring-purple-400 outline-none resize-none"></textarea>
                </div>

                <!-- PHONE -->
                <div>
                    <label class="block text-sm font-semibold text-slate-600 mb-2">Phone</label>
                    <input asp-for="AwardsDecription"
                           class="w-full rounded-xl border border-purple-200 px-4 py-3 focus:ring-2 focus:ring-purple-400 outline-none" />
                </div>

                <!-- EMAIL -->
                <div>
                    <label class="block text-sm font-semibold text-slate-600 mb-2">Email</label>
                    <input asp-for="Education"
                           class="w-full rounded-xl border border-purple-200 px-4 py-3 focus:ring-2 focus:ring-purple-400 outline-none" />
                </div>

                <!-- LOCATION -->
                <div class="md:col-span-2">
                    <label class="block text-sm font-semibold text-slate-600 mb-2">Location</label>
                    <input asp-for="EducationTitle"
                           class="w-full rounded-xl border border-purple-200 px-4 py-3 focus:ring-2 focus:ring-purple-400 outline-none" />
                </div>

            </div>

            <!-- BUTTONS -->
            <div class="mt-10 flex gap-5">

                <a asp-action="Index"
                   class="flex-1 py-4 rounded-2xl bg-slate-200 text-slate-700 font-semibold text-center hover:bg-slate-300 transition">
                    Cancel
                </a>

                <button type="submit"
                        class="flex-1 py-4 rounded-2xl bg-gradient-to-r from-purple-600 to-purple-400 text-white font-semibold shadow-lg hover:scale-[1.03] transition">
                    Update About
                </button>

            </div>

        </form>

    </div>

</div>
