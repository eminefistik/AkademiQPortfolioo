@model AkademiQPortfolioo.Data.AboutTable
@{
    ViewData["Title"] = "CreateAbout";
    Layout = "~/Views/Admin/Index.cshtml";
}

<style>
    body {
        background: linear-gradient(135deg, #F6F0FF, #ECE4FF) !important;
    }
</style>

<div class="min-h-screen w-full flex items-center justify-center px-6 py-16">

    <div class="w-full max-w-3xl">

        <!-- HEADER -->
        <div class="text-center mb-12">
            <h1 class="text-4xl font-bold text-purple-700 tracking-tight">Hakkında Oluştur</h1>
            <p class="mt-3 text-slate-500 text-lg">
                Kişisel bilgilerinizi ve profil detaylarınızı ekleyin.
            </p>
        </div>

        <!-- CARD -->
        <form asp-action="Create" method="post"
              class="relative bg-white/80 backdrop-blur-xl rounded-[2.5rem] p-10 shadow-2xl border border-purple-100">

            <div class="grid grid-cols-1 md:grid-cols-2 gap-8">

                <!-- NAME -->
                <div>
                    <label class="block text-sm font-semibold text-slate-600 mb-2">Ad Soyad</label>
                    <input asp-for="Title"
                           class="w-full rounded-xl border border-purple-200 px-4 py-3 focus:ring-2 focus:ring-purple-400 outline-none"
                           placeholder="Emine Fıstık" />
                </div>

                <!-- TITLE -->
                <div>
                    <label class="block text-sm font-semibold text-slate-600 mb-2">Başlık</label>
                    <input asp-for="Title"
                           class="w-full rounded-xl border border-purple-200 px-4 py-3 focus:ring-2 focus:ring-purple-400 outline-none"
                           placeholder="Bilgisayar Programcısı" />
                </div>

                <!-- IMAGE -->
                <div class="md:col-span-2">
                    <label class="block text-sm font-semibold text-slate-600 mb-2">Resim URL'si</label>
                    <input asp-for="Awards"
                           class="w-full rounded-xl border border-purple-200 px-4 py-3 focus:ring-2 focus:ring-purple-400 outline-none"
                           placeholder="https://..." />
                </div>

                <!-- DESCRIPTION -->
                <div class="md:col-span-2">
                    <label class="block text-sm font-semibold text-slate-600 mb-2">Tanım</label>
                    <textarea asp-for="Description"
                              rows="5"
                              class="w-full rounded-xl border border-purple-200 px-4 py-3 focus:ring-2 focus:ring-purple-400 outline-none resize-none"
                              placeholder="Hakkınızda bölümünü yazın..."></textarea>
                </div>

                <!-- PHONE -->
                <div>
                    <label class="block text-sm font-semibold text-slate-600 mb-2">Telefon</label>
                    <input asp-for="Title"
                           class="w-full rounded-xl border border-purple-200 px-4 py-3 focus:ring-2 focus:ring-purple-400 outline-none"
                           placeholder="+90 ..." />
                </div>

                <!-- EMAIL -->
                <div>
                    <label class="block text-sm font-semibold text-slate-600 mb-2">E-posta</label>
                    <input asp-for="AwardsTitle"
                           class="w-full rounded-xl border border-purple-200 px-4 py-3 focus:ring-2 focus:ring-purple-400 outline-none"
                           placeholder="mail@example.com" />
                </div>

                <!-- LOCATION -->
                <div class="md:col-span-2">
                    <label class="block text-sm font-semibold text-slate-600 mb-2">Konum</label>
                    <input asp-for="Title"
                           class="w-full rounded-xl border border-purple-200 px-4 py-3 focus:ring-2 focus:ring-purple-400 outline-none"
                           placeholder="İstanbul / Turkey" />
                </div>

            </div>

            <!-- BUTTONS -->
            <div class="mt-10 flex gap-5">

                <a asp-action="Index"
                   class="flex-1 py-4 rounded-2xl bg-slate-200 text-slate-700 font-semibold text-center hover:bg-slate-300 transition">
                    İptal Etmek
                </a>

                <button type="submit"
                        class="flex-1 py-4 rounded-2xl bg-gradient-to-r from-purple-600 to-purple-400 text-white font-semibold shadow-lg hover:scale-[1.03] transition">
                   Kayıt Et
                </button>

            </div>

        </form>

    </div>

</div>
