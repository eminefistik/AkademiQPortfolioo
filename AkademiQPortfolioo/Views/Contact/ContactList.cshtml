@model List<AkademiQPortfolioo.Data.ContactTable>
@{
    ViewData["Title"] = "ContactList";
    Layout = "~/Views/Admin/Index.cshtml";
}





<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Panel - Gelen Kutusu</title>

    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>

    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&display=swap" rel="stylesheet" />

    <script>
        tailwind.config = {
            darkMode: false,
            theme: {
                extend: {
                    colors: {
                        primary: "#8B5CF6",
                        secondary: "#A78BFA",
                        danger: "#EF4444",
                        sidebar: "#2B0F3A",
                        layoutBg: "#F4F0FA",
                        cardBg: "#FFFFFF",
                        softBorder: "#E6DDF5",
                    },
                    fontFamily: {
                        sans: ['Inter', 'sans-serif'],
                    },
                    borderRadius: {
                        DEFAULT: "1rem",
                        xl: "1.25rem",
                        '2xl': "1.75rem",
                        '3xl': "2.25rem",
                    },
                },
            },
        };
    </script>

    <style>
        body {
            font-family: Inter, sans-serif;
            background: #F4F0FA;
            min-height: 100dvh;
            -webkit-tap-highlight-color: transparent;
        }

        ::-webkit-scrollbar {
            display: none;
        }
    </style>
</head>

<body class="overflow-hidden flex flex-col">

    <!-- HEADER -->
    <header class="sticky top-0 z-30 flex items-center justify-between px-6 py-4
                   bg-white border-b border-[color:var(--tw-color-softBorder)] shadow-sm">
        <div class="flex items-center gap-3">
            <div class="w-10 h-10 rounded-xl bg-primary/10 text-primary flex items-center justify-center">
                <span class="material-symbols-outlined">inbox</span>
            </div>
            <h1 class="text-xl font-bold text-[#2B0F3A]">Gelen Kutusu</h1>
        </div>
    </header>

    <!-- MAIN -->
    <main class="flex-1 overflow-y-auto px-6 py-6 bg-layoutBg">

        <div class="flex justify-between items-end mb-6">
            <div>
                <span class="text-xs font-semibold uppercase text-primary">Mesaj Durumu</span>
                <h2 class="text-2xl font-bold text-[#2B0F3A] mt-1">7 Mesaj</h2>
            </div>
        </div>

        <div class="space-y-4">

            @foreach (var item in Model)
            {
                <div class="group bg-white rounded-2xl p-4 border-l-[5px] border-primary
                shadow-[0_8px_22px_-10px_rgba(139,92,246,0.35)] transition-all">

                    <div class="flex items-start gap-3">
                        <div class="h-12 w-12 rounded-xl bg-gradient-to-br from-primary to-secondary
                        text-white flex items-center justify-center text-lg font-bold">
                            :)
                        </div>

                        <div class="flex-1 min-w-0 pt-0.5">
                            <div class="flex items-center justify-between mb-1">
                                <h3 class="text-sm font-bold text-[#2B0F3A] truncate">@item.Title</h3>
                                <span class="text-xs font-medium text-primary bg-primary/10 px-2 py-0.5 rounded-full">
                                    @item.Adress
                                </span>
                            </div>

                            <p class="text-sm font-semibold text-[#2B0F3A] mb-0.5 truncate">
                                @item.Description
                            </p>

                            <p class="text-xs text-gray-600 leading-relaxed line-clamp-2">
                                @item.Message
                            </p>
                        </div>
                    </div>

                    <div class="mt-3 flex justify-between items-center border-t border-[#E6DDF5] pt-2">
                        <span class="text-xs text-gray-400 font-medium">@item.Email</span>

                        <div class="flex gap-1">
                            <button class="p-1.5 rounded-lg text-primary bg-primary/10 hover:bg-primary/20 transition-colors">
                                <span class="material-symbols-outlined text-lg">
                                    mark_email_read
                                </span>
                            </button>

                            <a href="/Contact/DeleteContact/@item.ContactId"
                               class="p-1.5 rounded-lg text-gray-400 hover:text-danger hover:bg-red-50 transition-colors">
                                <span class="material-symbols-outlined text-lg">
                                    delete
                                </span>
                            </a>
                        </div>
                    </div>

                </div>
            }

        </div>

    </main>

    <div class="fixed bottom-6 right-6 z-30">
        <button class="h-14 w-14 bg-primary text-white rounded-full shadow-lg shadow-purple-500/40 flex items-center justify-center hover:bg-purple-600 active:scale-95 transition-transform duration-200 ring-4 ring-white">
            <span class="material-symbols-outlined text-2xl">edit</span>
        </button>
    </div>

</body>
</html>

